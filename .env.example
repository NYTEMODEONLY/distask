# Discord bot token
token=YOUR_DISCORD_BOT_TOKEN

# PostgreSQL connection string (postgresql://user:password@host:port/database)
database_url=postgresql://distask:distaskpass@localhost:5432/distask

# Log file path
log_file=logs/distask.log

# Reminder schedule (cron-like hh:mm in UTC)
reminder_time=09:00

# Discord application credentials (optional, for OAuth/invite links)
discord_client_id=YOUR_CLIENT_ID
discord_client_secret=YOUR_CLIENT_SECRET
